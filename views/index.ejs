<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="exampleModalLabel">Add Note</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
            <div class="modal-body">
                <input class="form-control" id="note" type="text" required placeholder="Type your note...">
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="showModal" id="addNote">Add Note</button>
            </div>
        </div>
    </div>
</div>

<div class="filterSection">
    <div class="container">
        <button type="button" class="showModal" id="showModal" data-toggle="modal" data-target="#exampleModal">
            Create Note
        </button>
        
        <input type="text" id="input" placeholder="Filter notes">
    
        <select>
            <option value="sortRecentlyAdded">Sort by recently added</option>
            <option value="sortAlphabetically">Sort alphabetically</option>
        </select>
    </div>
</div>

<div class="container">
    <div id="notes"></div>
</div>

